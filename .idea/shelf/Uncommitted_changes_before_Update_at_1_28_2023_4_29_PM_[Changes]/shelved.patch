+        super.onViewCreated(view, savedInstanceState)
+
+        mAuth = FirebaseAuth.getInstance()
+
+        progressHUD = Utils.getProgressDialog(requireContext(), getString(R.string.please_wait))
+
+        setUpRecyclerView()
